<div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
  <h5 class="my-0 mr-md-auto font-weight-normal"><a  href="/" class="text-dark">Home</a></h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <%= link_to 'Minhas notícias', notices_path, class: 'mr-4 text-dark' %>
    <p class="navbar-text pull-right m-0 p-0">
      <% if collaborator_signed_in? %>
        Usuário <strong><%= current_collaborator.email %></strong>.
        <%= link_to 'Edit profile', edit_collaborator_registration_path, :class => 'btn btn-outline-primary' %> |
        <%= link_to "Logout", destroy_collaborator_session_path, method: :delete, :class => 'btn btn-outline-primary'  %>
      <% else %>
        <%= link_to "Sign up", new_collaborator_registration_path, :class => 'navbar-link btn btn-outline-primary'  %> |
        <%= link_to "Login", new_collaborator_session_path, :class => 'navbar-link btn btn-outline-primary'  %>
      <% end %>
    </p>
  </nav>
</div>
